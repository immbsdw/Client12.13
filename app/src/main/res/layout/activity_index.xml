<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="wrap_content">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pku.codingma.client.IndexActivity">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/avatar"
        android:contentDescription="头像"
        android:onClick="toLogin"/>
    <TextView
        android:id="@+id/username"
        app:layout_constraintStart_toStartOf="@id/avatar"
        android:layout_marginStart="50dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="请登录/注册"
        android:textSize="30sp"
        android:onClick="toLogin"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/persoal"
        app:layout_constraintStart_toEndOf="@id/username"
        android:text="个人中心"
        android:textSize="18sp"
        android:onClick="toPersonal"/>
    <Button
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/sign"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:text="签到"
        android:textSize="40sp"
        android:onClick="toSignin"/>
    <Button
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/quiz"
        app:layout_constraintTop_toBottomOf="@id/persoal"
        app:layout_constraintStart_toEndOf="@id/sign"
        android:layout_marginStart="10dp"
        android:textSize="40sp"
        android:text="课堂测验"
        android:onClick="toQuiz"/>
    <Button
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/question"
        app:layout_constraintTop_toBottomOf="@id/sign"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="40sp"
        android:text="课堂提问"
        android:onClick="toQuestion"/>
    <Button
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/discuss"
        app:layout_constraintTop_toBottomOf="@id/quiz"
        app:layout_constraintStart_toEndOf="@id/question"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="40sp"
        android:text="课后讨论"
        android:onClick="toDiscuss"/>
    <Button
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/fileman"
        app:layout_constraintTop_toBottomOf="@id/question"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="40sp"
        android:text="文件管理"
        android:onClick="toFileman"/>
</android.support.constraint.ConstraintLayout>
</ScrollView>

