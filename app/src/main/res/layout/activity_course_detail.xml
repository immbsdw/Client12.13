<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pku.codingma.client.CourseDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sign"
        android:id="@+id/title"
        android:textSize="40sp"
        android:text="软件项目管理"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/quiz"
        android:text="教师姓名"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="190dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sign"
        android:text="教师"
        android:textSize="22sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/quiz"
        android:text="时间"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="190dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sign"
        android:text="时间"
        android:textSize="22sp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/sign"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="350dp"
        android:text="签到"
        android:textSize="20sp"
        android:onClick="toSignin"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/quiz"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/sign"
        android:layout_marginStart="20dp"
        android:layout_marginTop="350dp"
        android:textSize="20sp"
        android:text="课堂测验"
        android:onClick="toQuiz"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/fileman"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/quiz"
        android:layout_marginStart="20dp"
        android:layout_marginTop="350dp"
        android:textSize="20sp"
        android:text="课件下载"
        android:onClick="toFileDown"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/discuss"
        app:layout_constraintTop_toBottomOf="@id/sign"
        app:layout_constraintStart_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:textSize="20sp"
        android:text="课后讨论"
        android:onClick="toDiscuss"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/question"
        app:layout_constraintTop_toBottomOf="@id/quiz"
        app:layout_constraintStart_toEndOf="@id/discuss"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:text="课堂提问"
        android:onClick="toQuestion"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Query"
        app:layout_constraintTop_toBottomOf="@id/fileman"
        app:layout_constraintStart_toEndOf="@id/question"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:text="查询"
        android:onClick="toQuery"/>
</android.support.constraint.ConstraintLayout>

