<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:checked="true"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:context="com.pku.codingma.client.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <com.pku.codingma.client.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.pku.codingma.client.TitleLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="姓名："
            android:textSize="15dp"
            android:gravity="center"
            android:background="@drawable/bkd001"
            />
        <EditText
            android:id="@+id/usrNameEditText"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:textColor="#5b5b5b"
            android:background="@drawable/bkd001"/>
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="18dp" />


    <LinearLayout android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="学号："
            android:textSize="15dp"
            android:gravity="center"
            android:background="@drawable/bkd001"
            />
        <EditText
            android:id="@+id/usrIDEditText"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:textColor="#5b5b5b"
            android:background="@drawable/bkd001"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="  性别："
            android:textSize="15dp"
            android:gravity="fill_vertical"
            android:background="@drawable/bkd001"
            />
        <CheckBox
            android:id="@+id/check_boy"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="    男"
            android:textColor="#5b5b5b"
            android:background="@drawable/bkd001"/>
        <CheckBox
            android:id="@+id/check_girl"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="    女"
            android:textColor="#5b5b5b"
            android:background="@drawable/bkd001"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />


    <LinearLayout android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="密码："
            android:textSize="15dp"
            android:gravity="fill_vertical"
            android:background="@drawable/bkd001"
            />
        <EditText
            android:id="@+id/usrPassword1EditText"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:textColor="#5b5b5b"
            android:inputType="textPassword"
            android:background="@drawable/bkd001"/>
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="18dp" />


    <LinearLayout android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="确认密码："
            android:textSize="15dp"
            android:gravity="center"
            android:background="@drawable/bkd001"
            />
        <EditText
            android:id="@+id/usrPassword2EditText"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:textColor="#5b5b5b"
            android:background="@drawable/bkd001"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="18dp" />



    <Button
        android:id="@+id/button_register"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:text="注 册"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:background="#3300ff"/>


</LinearLayout>